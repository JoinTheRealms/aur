# Contributor: Nicolas Quienot <niQo>
pkgname=libgcal
pkgver=0.9.6
pkgrel=1
pkgdesc="ANSI C library that does allow communication with google calendar and contacts"
url="http://code.google.com/p/libgcal/"
arch=('i686' 'x86_64')
makedepends=('cmake' 'pkgconfig')
options=('!libtool')
depends=('libxml2' 'curl')
license=('GPL')
source=(http://libgcal.googlecode.com/files/$pkgname-$pkgver.tar.bz2
        check-for-empty-strings-before-copy-them.patch
        use-https-instead-of-http.patch)
sha1sums=('d616b911a99b1846851371184dcd547dccf548de'
          '45d2492262512a05634936a8c6289d731d31cd19'
          '51c324372fe940ca1cc62ba0dcc39b666b19c061')

build() 
{
  cd $srcdir/$pkgname-$pkgver
  patch -Np1 -i ../check-for-empty-strings-before-copy-them.patch
  patch -Np1 -i ../use-https-instead-of-http.patch
  autoreconf -i -f
  mkdir build
  cd build
  ../configure --prefix=/usr
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}

