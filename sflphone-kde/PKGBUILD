# Maintainer: Christoph Wiechert <wio@psitrax.de>
pkgname=sflphone-kde
pkgver=1.4.1
pkgrel=1
pkgdesc="SIP/IAX2 softphone"
url="http://www.sflphone.org"
arch=('x86_64' 'i686')
license=('GPL3')
depends=('kdelibs' 'libpulse' 'libzrtpcpp' 'libyaml' 'dbus-c++' 'speex' 'libsamplerate' 'kdepimlibs')
makedepends=('autoconf' 'cmake' 'boost' 'automoc4')
conflicts=('sflphone')
source=("https://projects.savoirfairelinux.com/attachments/download/14805/sflphone-1.4.1.tar.gz")
md5sums=('2092fb6ebcdfdf4f0f45da4738b1be8d')

build() {

## pjsip
  msg "Compile PJSIP"
  cd "${srcdir}/sflphone-${pkgver}/daemon/libs"
  ./compile_pjsip.sh
  

  ## apply patch
  msg "Applying TLS patch"
  sed -i '257s/.*/    RETURN_IF_FAIL(listeningAddress, nullptr, "Could not determine IP address for this transport");/' "${srcdir}/sflphone-${pkgver}/daemon/src/sip/siptransport.cpp"
  
  
## daemon
  msg "Compile the Daemon"
  cd "${srcdir}/sflphone-${pkgver}/daemon"
  ./autogen.sh
  # zrtp leads to comile error
  ./configure --prefix="/usr" --without-zrtp
  # --disable-ilbc 
   make
   
## KDE client
  msg "Compile the KDE Client"
  cd "${srcdir}/sflphone-${pkgver}/kde"
  sed -i 20d src/CMakeLists.txt
  ./config.sh -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR=lib
  cd build
  LC_ALL=C make -j3
}

package() {

## daemon
  cd "${srcdir}/sflphone-${pkgver}/daemon"
  make DESTDIR="${pkgdir}" install
  
## KDE client
  cd "${srcdir}/sflphone-${pkgver}/kde/build"
  make DESTDIR="${pkgdir}" install
  
  gtk-update-icon-cache
}

# vim:set ts=2 sw=2 et: