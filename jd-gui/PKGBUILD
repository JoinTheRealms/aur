# Contributor: Simon Legner <Simon.Legner@gmail.com>

pkgname=jd-gui
pkgver=1.0.0
pkgrel=1
pkgdesc='A standalone graphical utility that displays Java source codes of .class files'
arch=(any)
url='http://jd.benow.ca/'
license=('GPL3')
depends=(java-runtime)
source=(https://github.com/java-decompiler/jd-gui/releases/download/v$pkgver/jd-gui-$pkgver.jar
        jd-gui.sh)

package() {
    cd "$srcdir"
    install -vdm 755 "$pkgdir/usr/bin/"
    sed "s/__VERSION__/$pkgver/" "$srcdir/jd-gui.sh" > "$pkgdir/usr/bin/jd-gui"
    chmod 755 "$pkgdir/usr/bin/jd-gui"
    install -vDm 644 jd-gui-$pkgver.jar "$pkgdir/usr/share/java/jd-gui/jd-gui-$pkgver.jar"
}

md5sums=('b88ddd33cf5beea03a321beefb681955'
         'eeab76c02aeaa19fb1a9bb8c6de14fa9')
sha1sums=('197b60dfc791fcd8a868b6f46d26885ab237d591'
          '2f5ce185a574bcdefd05b16a5c943de6c21f1b7b')
sha256sums=('11fea349287b654558204eaf259995f5ebc5442f8147b0e36704b37005f15b6b'
            '1baa043f927efa0347c5216cc975a11bd140f6521cca57ea4b84f25b9242baba')
